<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<context-param>
	   <param-name>school</param-name>
	   <param-value>FirstBPM</param-value>
	</context-param>
	
	<servlet>
	   <servlet-name>myServlet1</servlet-name>
	   <servlet-class>com.cshr.servlet1.MyServlet1</servlet-class>
	</servlet>
	<servlet> 
	  <servlet-name>myServlet2</servlet-name>
	  <servlet-class>com.cshr.servlet1.MyServlet2</servlet-class>
	</servlet>
	<servlet> 
	  <servlet-name>myServlet3</servlet-name>
	  <servlet-class>com.cshr.servlet1.MyServlet3</servlet-class>
	</servlet>
	<servlet> 
	  <servlet-name>myServlet4</servlet-name>
	  <servlet-class>com.cshr.servlet1.MyServlet4</servlet-class>
	  <init-param>
	      <param-name>uname</param-name>
	      <param-value>cshr</param-value>
	  </init-param>
	</servlet>
	<servlet>
	   <servlet-name>myServlet5</servlet-name>
	   <servlet-class>com.cshr.servlet1.MyServlet5</servlet-class>
	</servlet>
	
	<servlet-mapping>
	   <servlet-name>myServlet1</servlet-name>
	   <url-pattern>/myServlet1</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	  <servlet-name>myServlet2</servlet-name>
	  <url-pattern>/myServlet2</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	  <servlet-name>myServlet3</servlet-name>
	  <url-pattern>/myServlet3</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	 <servlet-name>myServlet4</servlet-name>
	 <url-pattern>/myServlet4</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	 <servlet-name>myServlet5</servlet-name>
	 <url-pattern>/myServlet5</url-pattern>
	</servlet-mapping>
	
	<!-- 练习一 -->
	<servlet>
	    <servlet-name>myServlet1_lx</servlet-name>
	    <servlet-class>com.cshr.servlet2.MyServlet1</servlet-class>
	</servlet>
	<servlet>
	    <servlet-name>myServlet2_lx</servlet-name>
	    <servlet-class>com.cshr.servlet2.MyServlet2</servlet-class>
	</servlet>
	<servlet>
	  <servlet-name>myServlet3_lx</servlet-name>
	  <servlet-class>com.cshr.servlet2.MyServlet3</servlet-class>
	</servlet>
	<servlet>
	  <servlet-name>myServlet4_lx</servlet-name>
	  <servlet-class>com.cshr.servlet2.MyServlet4</servlet-class>
	  <init-param>
	     <param-name>SEX</param-name>
	     <param-value>boy</param-value>
	  </init-param>
	</servlet>
	<servlet-mapping>
	   <servlet-name>myServlet1_lx</servlet-name>
       <url-pattern>/myServlet1_lx</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	   <servlet-name>myServlet2_lx</servlet-name>
       <url-pattern>/myServlet2_lx</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	   <servlet-name>myServlet3_lx</servlet-name>
	   <url-pattern>/myServlet3_lx</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	   <servlet-name>myServlet4_lx</servlet-name>
	   <url-pattern>/myServlet4_lx</url-pattern>
	</servlet-mapping>
	
	<!-- 练习二 -->
	<servlet>
	  <servlet-name>afterClassServlet1</servlet-name>
	  <servlet-class>com.cshr.servlet3.AfterClassServlet1</servlet-class>
	</servlet>
	<servlet>
	  <servlet-name>afterClassServlet2</servlet-name>
	  <servlet-class>com.cshr.servlet3.AfterClassServlet2</servlet-class>
	</servlet>
	<servlet>
	  <servlet-name>afterClassServlet3</servlet-name>
	  <servlet-class>com.cshr.servlet3.AfterClassServlet3</servlet-class>
	</servlet>
	
	<servlet-mapping>
	  <servlet-name>afterClassServlet1</servlet-name>
	  <url-pattern>/afterClassServlet1</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	  <servlet-name>afterClassServlet2</servlet-name>
	  <url-pattern>/afterClassServlet2</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	  <servlet-name>afterClassServlet3</servlet-name>
	  <url-pattern>/afterClassServlet3</url-pattern>
	</servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
